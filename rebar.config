{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{profiles, [
    {test, [
        {pre_hooks, [{compile, "gleam build ."}]},
        {src_dirs, ["src", "test", "gen/src", "gen/test"]}
    ]},

    {dev, [
        {pre_hooks, [{compile, "gleam build ."}]}
    ]}
]}.

{shell, [
  % {config, [{config, "config/sys.config"}]},
    {apps, [tiny]}
]}.

{deps, [
    gleam_stdlib,
    {gleam_experimental_elli, {git, "https://github.com/gleam-lang/gleam_experimental_elli"}},
    {gleam_http, {git, "https://github.com/gleam-lang/gleam_http"}},
    elli
]}.
