{erl_opts, [debug_info]}.
{src_dirs, ["src", "gen/src"]}.

{profiles, [
    {test, [
        {pre_hooks, [{compile, "gleam build ."}]},
        {src_dirs, ["src", "test", "gen/src", "gen/test"]}
    ]},

    {dev, [
        {pre_hooks, [{compile, "gleam build ."}]}
    ]}
]}.

{shell, [
  % {config, [{config, "config/sys.config"}]},
    {apps, [tiny]}
]}.

{deps, [
    {gleam_stdlib, {git, "https://github.com/gleam-lang/stdlib", {branch, "master"}}},
    {gleam_http, {git, "https://github.com/gleam-lang/gleam_http", {branch, "gleam-0.5"}}},
    {gleam_experimental_elli, {git, "https://github.com/gleam-experiments/elli"}},
    elli
]}.
